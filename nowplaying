## Global Variables
prgnam="nowplaying.sh"
version="0.93"

plex_host="localhost,127.0.0.1" # Plex server IP(s), separated by space
max_width="0"                   # Set the maximum width of print; 0=infinite
dot_leader="."                  # Delimiter used for dot leader.
dl_agent=""                     # Either curl, wget, or fetch
skip_checks=""                  # Skip dependency checks
plex_file=""                    # Optional XML for testing
# color=auto

## Text Color Definitions
# Someday
# black="\033[30m"
# blue="\033[34m"
# cyan="\033[36m"
# grey="\033[30;1m"
# green="\033[32m"
# magenta="\033[35m"
# red="\033[31m"
# white="\033[37m"
# yellow="\033[33m"
# 
# ## Text Effect Definitions
# regular=""
bold="\033[1m"
# italic="\033[3m"
# underline="\033[4m"
# 
treset="\033[m"

## Functions
print_help() {
cat <<EOF

$prgnam, version $version
a simple, POSIX-compliant script to print the "Now Playing" status
of a Plex server to stdout.

Example: '"$prgnam" -p localhost,192.168.1.1 -w 80 -d "." 

        REQUIRED PARAMATERS:
            
        --plex, -p    IP address(es) or domain name of Plex Server
                      separated by commas, no spaces.
                      Default=localhost,127.0.0.1

        OPTIONAL PARAMATERS:

        --width, -w   Maximum number of columns width.
                      Default=0, "infinite"
        --delim, -d   Dot leader for display. Default = "."
       
        --force, -f   Skip dependency checks.

        --curl        Force curl as downloader.
        --wget        Force wget as downloader.
        --fetch       Force fetch as downloader.

        --file        Point to a local XML file for debugging

EOF
}

dependency_check() {
    if [ -n "$dl_agent" ]; then
        true
    elif [ -x "$(command -v curl)" ]; then
        dl_agent="$(command -v curl)"
    elif [ -x "$(command -v wget)" ]; then
        dl_agent="$(command -v wget)"
    elif [ -x "$(command -v fetch)" ]; then
        dl_agent="$(command -v fetch)"
    else
        printf "Error: curl, wget, or fetch not found.\n"
        exit 1
    fi

#    case "$color" in
#        true|yes)
#            color=true ;;
#        auto)
#            [ "$(tput colors)" ] || unset "$color" ;;
#        *)
#            unset "$color" ;;
#    esac

    if [ -z "$skip_checks" ]; then
        return 0
    fi

    # Let's make sure everything is here
    for __coreutil in tput grep cut sed; do
        if [ ! "$(command -v $__coreutil)" ]; then
            printf "Error: \"%s\" not found.\n" "$__coreutil"
            exit 1
        fi
    done

}

truncate_string() {
    __string="$1"
    __width="$2"
    __count="$(((${#__string} - __width) + 3))" # 3 additional for elipses

    while [ "$__count" -gt 0 ]; do
        __string="${__string%?}"
        __count="$((__count - 1))"
    done

    printf "%s..." "$__string"
}

print_delim() {
    __word="$1"
    __width="$2"
    __count=$((__width - __word))
    while [ "$__count" -gt 0 ]; do
        printf "%b%s" "$treset" "$dot_leader"
        __count=$((__count - 1))
    done
}

print_nowplaying() {
    __count="$1"
    __album="$2"
    __track="$3"
    __title="$4"
    __user="$5"
    __type="$6"
    __columns="$("$(command -v tput)" cols)"

    if [ "$max_width" -ne 0 ] && [ "$__columns" -gt "$max_width" ]; then
       __columns="$max_width"
    fi

    __col1="$((${#__count} + 1))"
    __col3="$((${#__user} + 1))"
    __col2="$((__columns - (__col3 +  __col1) - 4))"

    case "$__type" in
        episode)
              # TV Episodes 
              __title="${__album}: ${__track}"

              # If it doesn't fit, spread over two lines
              if [ "${#__title}" -gt "$__col2" ]; then

                  if [ "${#__album}" -gt "$__col2" ]; then
                  __album="$(truncate_string "$__album" "$__col2")"
                  fi

                  if [ "${#__track}" -gt "$__col2" ]; then
                  __track="$(truncate_string "$__track" "$__col2")"
                  fi

                  # Line 1
                  printf "%b%${__col1}s %-${__col2}s%${__col3}s%b\n" \
                      "$bold" "$__count." "$__album" "" "$treset"
                  # Line 2
                  printf "%${__col1}s %b%-${__col2}s%b%${__col3}s%b\n" \
                      "" "$bold" "$__track \
                      $(print_delim ${#__track} ${__col2})" \
                      "$bold" "$__user" "$treset"
                else

                # Otherwise everything on one line
              printf "%b%${__col1}s %-${__col2}s%b%${__col3}s%b\n" \
                  "$bold" "$__count." \
                  "$__title $(print_delim ${#__title} ${__col2})" \
                  "$bold" "$__user" "$treset"
              fi
            ;;

          track)
              # Music tracks
              __title="${__album}: ${__track}"

              # If it doesn't fit, spread over two lines
              if [ "${#__title}" -gt "$__col2" ]; then

                  if [ "${#__album}" -gt "$__col2" ]; then
                  __album="$(truncate_string "$__album" "$__col2")"
                  fi

                  if [ "${#__track}" -gt "$__col2" ]; then
                  __track="$(truncate_string "$__track" "$__col2")"
                  fi

                  # Line 1
                  printf "%b%${__col1}s %-${__col2}s%${__col3}s%b\n" \
                      "$bold" "$__count." "$__album" "" "$treset"
                  # Line 2
                  printf "%b%${__col1}s %-${__col2}s%b%${__col3}s%b\n" \
                      "$bold" "" "$__track \
                      $(print_delim ${#__track} ${__col2})" \
                      "$bold" "$__user" "$treset"
                else

                    # All on one line
              printf "%b%${__col1}s %-${__col2}s%b%${__col3}s%b\n" \
                  "$bold" "$__count." \
                  "$__title $(print_delim ${#__title} ${__col2})" \
                  "$bold" "$__user" "$treset"

              fi
            ;;

          movie)
              # Movies
              # Simpler, always on one line, truncated if needed
              if [ "${#__title}" -gt "$__col2" ]; then
                  __title="$(truncate_string "$__title" "$__col2")"
              fi
              printf "%b%${__col1}s %-${__col2}s%b%${__col3}s%b\n" \
                  "$bold" "$__count." \
                  "$__title $(print_delim ${#__title} ${__col2})" \
                  "$bold" "$__user" "$treset"
            ;;
    esac
}

get_element() {
    printf "%s\n" "${2}" | grep -Eo "${1}=\"[a-zA-Z0-9?!&()#:;.,-_ ]*\"" | \
        cut -d '=' -f 2 | tr -d '"' | sed -e "s/\&\#39\;/'/g"
}

download_session() {
    __host="$1"
    case "$dl_agent" in
        *curl)
            "$dl_agent" -m 2 -s http://"$__host":32400/status/sessions
            return "$?" 
            ;;
         *wget)
            "$dl_agent" -T 2 -qO - http://"$__host":32400/status/sessions
            return "$?" 
            ;;
         *fetch)
            "$dl_agent" -T 2 -qO - http://"$__host":32400/status/sessions
            return "$?" 
            ;;
        esac
}

get_plexml() {
    if [ -n "$plex_file" ]; then
        cat "$plex_file"
        return
    fi
    oldIFS=$IFS
    IFS=,
    # shellcheck disable=2086
    set -- ${plex_host}
    for __host in "$@"; do
        if download_session "$__host"; then
            return "$?"
        fi
    done
    IFS=$oldIFS
}

parse_plexml() {
    __title=""
    __user=""
    __album=""
    __track=""
    __type=""
    #__series=""
    #__episode=""

    __count=0
    while IFS= read -r line; do
        case "$(get_element "type" "$line")" in
          episode)
                  __type="episode"
                  __album="$(get_element "grandparentTitle" "$line")"
                  __track="$(get_element "title" "$line")"
                  #__title="$(printf "%s:\n\t%s" "${__album}" "${__track}")"
                  continue ;;
          track)
              __type="track"
              __album="$(get_element "grandparentTitle" "$line")"
              __track="$(get_element "title" "$line")"
              #__title="$(printf "%s:\n\t%s" "${__album}" "${__track}")"
              continue ;;
          movie)
              __type="movie"
              __title="$(get_element "title" "$line")"
              continue ;;
        esac

        if printf "%s\n" "$line" | grep -q 'User id'; then
            __user="$(get_element "title" "$line")"
            if [ "$__count" -eq 0 ]; then
                printf "%bNow Playing on Plex:%b\n" "$bold" "$treset"
                __count="$((__count+1))"
            fi
            print_nowplaying "$__count" "$__album" "$__track" \
                "$__title" "$__user" "$__type"
            __count="$((__count+1))"
            continue
        fi
    done << EOF
    "$(get_plexml)"
EOF
if [ $__count -eq 0 ]; then
    return 2
fi
}

main() {
    while [ "$#" -gt 0 ]; do
        case "$1" in 
         --plex|-p)
                plex_host="$2"
                shift 2 ;;
        --width|-w)
                max_width="$2"
                shift 2 ;;
        --delim|-d)
                dot_leader="$2"
                shift 2 ;;
           #--color)
           #     color="yes"
           #     shift 1 ;;
            --file)
                plex_file="$2"
                shift 2 ;;
        --force|-f)
                skip_checks=1
                shift 1 ;;
            --file)
                plex_file="$2"
                shift 2 ;;
            --curl)
                dl_agent="$(command -v curl)"
                shift 1 ;;
            --wget)
                dl_agent="$(command -v wget)"
                shift 1 ;;
           --fetch)
                dl_agent="$(command -v fetch)"
                shift 1 ;;
         --help|-h)
                print_help
                exit 0 ;;
                     *)
	            printf "ERROR: \"%s\" is not a valid expression.\n" "$1"
	            printf "Try \"%s\" --help for help.\n" "$prgnam"
                exit 1 ;;
        esac
    done

    if dependency_check; then
        parse_plexml
    fi
}

main "$@"
